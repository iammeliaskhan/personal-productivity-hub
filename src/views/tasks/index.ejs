<div class="page-shell">
  <header class="page-header">
    <h1 class="page-title">Tasks</h1>
    <p class="page-subtitle">A calmer way to scan whats on your plate.</p>
    <div class="page-actions">
      <a class="page-pill-link" href="/tasks/new"><strong>+</strong><span>New task</span></a>
    </div>
  </header>

  <section class="page-card">
    <h2 class="page-section-title">Suggested groups</h2>
    <div class="plan-columns">
      <div class="plan-column">
        <h3 class="page-section-title">Deep focus</h3>
        <p class="muted-text">High-impact work that benefits from fewer distractions.</p>
        <ul class="plan-list">
          <% tasks.filter(t => t.priority === 'HIGH').slice(0, 5).forEach(function(task) { %>
            <li>
              <strong><%= task.title %></strong>
              <span class="muted-text">&middot; <%= task.status %></span>
            </li>
          <% }); %>
        </ul>
      </div>
      <div class="plan-column">
        <h3 class="page-section-title">Admin & light lifts</h3>
        <p class="muted-text">Emails, logistics, and things you can do with lower energy.</p>
        <ul class="plan-list">
          <% tasks.filter(t => t.priority !== 'HIGH').slice(0, 5).forEach(function(task) { %>
            <li>
              <strong><%= task.title %></strong>
              <span class="muted-text">&middot; <%= task.priority %> &middot; <%= task.status %></span>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </section>

  <section class="page-card">
    <h2 class="page-section-title">All tasks</h2>

    <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Due</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% tasks.forEach(function(task) { %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.dueDate ? new Date(task.dueDate).toLocaleDateString() : '' %></td>
        <td>
          <a href="/tasks/<%= task.id %>/edit">Edit</a>
          <form method="post" action="/tasks/<%= task.id %>/delete" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
  </section>
</div>
